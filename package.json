{
  "name": "bconf",
  "productName": "Bconf",
  "description": "Binary confernce for everyone",
  "version": "2.0.0",
  "electronVersion": "0.35.0",
  "dependencies": {},
  "devDependencies": {
    "chai": "^4.1.2",
    "mocha": "^5.2.0",
    "mongo-unit": "^1.3.4",
    "proxyquire": "^2.1.0"
  },
  "engines": {
    "node": "^8",
    "npm": "^5"
  },
  "scripts": {
    "install": "cd server; npm install; cd ../client;  npm install",
    "lint": "standard --fix --env mocha --plugin riot",
    "test": "mocha ./server/*.spec.js --delay",
    "now": "cd server; npm run deploy",
    "build": "gulp build",
    "release": "bash ./release.sh",
    "server:dev": "cd server; npm run dev",
    "client:dev": "cd client; npm start",
    "dev": "export DATABASE_URL='mongodb://localhost:27017/test'; node ./server"
  }
}
